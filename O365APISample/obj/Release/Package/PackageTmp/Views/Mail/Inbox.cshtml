@model O365APISample.Models.Inbox

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inbox</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <style>
        table {
            width: 100%;
            table-layout: fixed;
            word-wrap: break-word;
        }
        td {
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body>
    <div class="header">
        <h4>
            Your inbox mail (Max 20 items)
        </h4>
    </div>

    <div class="container">
        <div class="table-responsive">
            <table class="table table-striped" border="1" style="table-layout: fixed;">
                <thead>
                    <tr>
                        <th class="col-xs-3 col-sm-3 col-md-3">From</th>
                        <th class="col-xs-7 col-sm-7 col-md-7">Subject</th>
                        <th class="col-xs-2 col-sm-2 col-md-2">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mail in Model.Mails)
                    {
                        <tr>
                            <td class="col-xs-3 col-sm-3 col-md-3">@mail.From.EmailAddress.Name</td>
                            <td class="col-xs-7 col-sm-7 col-md-7">@mail.Subject</td>
                            <td class="col-xs-2 col-sm-2 col-md-2">@mail.DateTimeReceived.ToShortDateString()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
